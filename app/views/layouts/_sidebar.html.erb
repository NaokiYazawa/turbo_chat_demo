<div class="flex-1 px-2">
  <div class="flex mt-4">
    <%= link_to new_room_path, class: "inline-flex w-full items-center justify-center rounded-md bg-indigo-500 p-3 text-white duration-100 ease-in-out hover:bg-indigo-600 focus:outline-none cursor-pointer" do %>
      New Room
    <% end %>
  </div>
  <% rooms.each do |room| %>
    <%= link_to room_path(room) do %>
      <div class="entry cursor-pointer transform hover:scale-105 duration-300 transition-transform bg-white my-4 rounded p-4 flex shadow-md">
        <div class="flex-1 px-2">
          <div class="truncate w-full">
            <span class="text-gray-800"><%= room.title %></span>
          </div>
          <div><small class="text-gray-600">created at <%= l room.created_at, format: :short %></small></div>
        </div>
        <div class="text-right">
          <small class="text-xs bg-blue-400 text-white rounded-full h-6 w-6 leading-6 text-center inline-block">
            <%= room.entries.size %>
          </small>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
