<div class="flex-2 pt-4 pb-4">
  <%= form_with(model: [@room, @message]) do |f| %>
    <div class="write bg-white shadow flex rounded-lg">
      <div class="flex-1">
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.text_field :content, class: "w-full block outline-none py-4 px-4 bg-transparent", placeholder: "Type a message..." %>
      </div>
      <div class="flex p-2">
        <%= f.button "", class: "bg-blue-500 w-10 h-10 rounded-full inline-block hover:bg-blue-600", type: "button", onclick: 'submit();' do %>
          <span class="inline-block align-text-bottom">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" class="w-4 h-4 text-white"><path d="M5 13l4 4L19 7"></path></svg>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
