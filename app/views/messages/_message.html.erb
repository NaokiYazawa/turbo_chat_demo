<div class="message-<%= message.user.id %> mb-4 flex">
  <div class="flex-1 px-5">
    <div class="mb-1"><strong class="text-gray-500"><%= message.user.name %></strong></div>
    <div class="content-<%= message.user.id %> inline-block bg-gray-300 rounded-md py-2 px-4 text-gray-700">
      <span><%= message.content %></span>
    </div>
    <div>
      <small class="text-gray-500"><%= l message.created_at, format: :short %></small>
    </div>
  </div>
</div>
